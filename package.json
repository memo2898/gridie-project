{
  "name": "gridie",
  "version": "1.0.0",
  "description": "Advanced data table component with filtering, sorting, and pagination built with Web Components",
  "type": "module",
  "main": "./dist/gridie.umd.js",
  "module": "./dist/gridie.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/gridie.es.js",
      "require": "./dist/gridie.umd.js"
      
    },
    "./dist/gridie.css": "./dist/gridie.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --project tsconfig.build.json",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "table",
    "datagrid",
    "datatable",
    "grid",
    "pagination",
    "filtering",
    "sorting",
    "web-components",
    "typescript",
    "component",
    "data-table",
    "filter",
    "sort",
    "responsive"
  ],
  "author": { 
    "name": "Manuel",
    "email": "tu-email@ejemplo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/gridie.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/gridie/issues"
  },
  "homepage": "https://github.com/tu-usuario/gridie#readme",
  "devDependencies": {
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}